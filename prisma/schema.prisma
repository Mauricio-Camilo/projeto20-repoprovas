// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String?       @unique
  password    String?       @unique
  @@map("users")
}

model Category {
  id  Int @id @default(autoincrement())
  name  String
  tests Test[]
  @@map("categories")
}

model Teacher {
  id Int @id @default(autoincrement())
  name String
  teacherDisciplines TeachersDisciplines[]
  @@map("teachers")
}

model Discipline {
  id  Int @id @default(autoincrement())
  name  String
  termId Int
  terms Term @relation(fields: [termId], references: [id])
  teacherDisciplines TeachersDisciplines[]
  @@map("disciplines")
}

model Term {
  id Int  @id @default(autoincrement())
  numbers Int
  disciplines Discipline[]
}

model TeachersDisciplines {
  id Int @id @default(autoincrement())
  teacherId Int
  disciplineId Int
  teachers Teacher @relation(fields: [teacherId], references: [id])
  disciplines Discipline @relation(fields: [disciplineId], references: [id])
  tests Test[]
}

model Test {
  id Int @id @default(autoincrement())
  name String
  pdfUrl String
  categoryId Int
  teacherDisciplineId Int
  categories  Category @relation(fields: [categoryId], references: [id])
  teacherDisciplines TeachersDisciplines @relation(fields: [teacherDisciplineId], references: [id])
}
